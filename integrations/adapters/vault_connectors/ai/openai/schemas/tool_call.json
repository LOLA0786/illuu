{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenAI Tool Call",
  "type": "object",
  "required": ["model", "messages", "tools"],
  "properties": {
    "model": {"type": "string"},
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {"type": "string"},
          "content": {"type": "string"}
        }
      }
    },
    "tools": {"type": "array"},
    "temperature": {"type": "number"},
    "max_tokens": {"type": "integer"}
  },
  "additionalProperties": false
}
