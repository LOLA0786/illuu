{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvidenceBundle",
  "type": "object",
  "properties": {
    "bundle_id": {"type": "string"},
    "generated_at": {"type": "string"},
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "control_id": {"type": "string"},
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {"type": "string"},
                "path": {"type": "string"},
                "sha256": {"type": "string"}
              },
              "required": ["type", "path", "sha256"]
            }
          }
        },
        "required": ["control_id", "artifacts"]
      }
    }
  },
  "required": ["bundle_id", "generated_at", "controls"]
}
